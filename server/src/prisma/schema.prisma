generator client {
  provider = "prisma-client-js"
  output   = "../../generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"] 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          Int         @id @default(autoincrement())
  name        String      @unique @db.VarChar(255)
  description String?     @db.VarChar(500)
  location    String?     @db.VarChar(255)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  apartments  Apartment[]

  @@index([name], map: "idx_project_name")
}

model Apartment {
  id          Int      @id @default(autoincrement())
  unit_name   String   @db.VarChar(255)
  unit_number String   @db.VarChar(255) @unique
  projectId   Int
  project     Project  @relation(fields: [projectId], references: [id])
  address     String
  price       Decimal  @db.Decimal(10, 2)
  bedrooms    Int
  description String   @db.VarChar(255)
  createdAt   DateTime @default(now())
  status      String   @default("available") @db.VarChar(20)
  amenities   String[] @default([])
  images      String[] @default([])
  area        Decimal  @default(0) @db.Decimal(8, 2)
  bathrooms   Int      @default(1)

  @@index([projectId], map: "idx_project_id")
  @@index([unit_number], map: "idx_unit_number")
  @@index([status], map: "idx_status")
}
