{
  "name": "task-monorepo",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "install:all": "yarn --cwd client install && yarn --cwd server install",
    "type-check:server": "tsc --noEmit -p server/tsconfig.json",
    "type-check:client": "tsc --noEmit -p client/tsconfig.json"
  },
  "devDependencies": {
    "eslint": "^9.37.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "server/**/*.ts": [
      "eslint --fix --config server/eslint.config.mjs",
      "prettier --write"
    ],
    "client/**/*.{ts,tsx}": [
      "yarn --cwd client lint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}
